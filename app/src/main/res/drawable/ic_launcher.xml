<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!--Base Circle-->
    <item>
        <shape
            android:shape="oval">
            <stroke android:width="1dp" android:color="@color/background" />
            <gradient
                android:angle="45"
                android:startColor="@color/startColor"
                android:endColor="@color/endColor"
                android:type="linear" />
        </shape>
    </item>

    <!-- Black Circle with tick-->
    <item
        android:top="7dp"
        android:bottom="7dp"
        android:left="7dp"
        android:right="7dp"
        android:drawable="@drawable/ic_cloudy">
    </item>
</layer-list>